version: '3'

networks:
  dev:

services:
  nginx:
    container_name: nginx
    image: nginx:stable-alpine
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - './nginx.conf:/etc/nginx/nginx.conf'
      - /etc/letsencrypt/live/sechenov-inquierer.ru/fullchain.pem:/etc/letsencrypt/live/sechenov-inquierer.ru/fullchain.pem
      - /etc/letsencrypt/live/sechenov-inquierer.ru/privkey.pem:/etc/letsencrypt/live/sechenov-inquierer.ru/privkey.pem

    depends_on:
      - go_app
      - frontend
    networks:
      - dev

  go_app:
    container_name: go_app
    build:
      context: ./Sechenovka
    volumes:
      - ./data:/app/data
      - ./public:/app/public
    environment:
      - DATABASE_PATH=/app/data/storage.db
    ports:
      - "3010:8080"
    networks:
      - dev
    restart: always


  frontend:
    container_name: frontend
    build:
      context: ./ui
    networks:
      - dev
    env_file:
      - ui/.env


volumes:
  node_modules:
